@model Knoex.ViewModels.UserIndexViewModel
@{
    ViewData["Title"] = "Users";
}
<div class="grid grid-cols-3 gap-5 mb-8">
    @foreach (User user in Model.Users.Results)
    {
        <div class="flex flex-col p-6 bg-white rounded shadow">
            <div class="flex justify-between">
                <a href="/users/@user.Id" class="w-full cursor-pointer">
                    <div class="w-full text-2xl font-bold">@user.FirstName</div>
                    @user.LastName
                </a>
                <img class="h-20 w-20 mx-auto rounded-full" src="@user.Avatar()" alt="Avatar">
            </div>
            <div>
                <div class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-1 mr-1 text-gray-400" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                    <span class="mx-2 text-gray-600">@user.QuestionCount asked questions</span>
                </div>
                <div class="flex mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-1 mr-1 text-gray-400" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="mx-2 text-gray-600">@user.AcceptedAnswerCount accepted answers</span>
                </div>
            </div>
        </div>
    }
</div>
<partial name="_Paging" model="new Knoex.ViewModels.PagingViewModel{ Meta = Model.Users.Meta }" />