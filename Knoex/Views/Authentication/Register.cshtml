@{
    Layout = "_EmptyLayout";
    ViewData["Title"] = "Register";
}
<div>
    <div>
        <div>
            <img src="~/img/knoex-logo.svg" alt="Knoex Logo">
            <h2>Create your Knowex account</h2>
            <div>
                <a href="/login">I already have an account</a>
            </div>
        </div>
        <form action="/register" method="post">
            @Html.AntiForgeryToken()
            <div>
                <div>
                    <label for="email">Email address</label>
                    <input id="email" name="email" type="email" required>
                </div>

                <div>
                    <label for="first_name">Firstname</label>
                    <input id="first_name" name="first_name" type="text" required>
                </div>
                <div>
                    <label for="last_name">Lastname</label>
                    <input id="last_name" name="last_name" type="text" required>
                </div>

                <div>
                    <label for="username">Username</label>
                    <input id="username" name="username" type="text" required>
                </div>

                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password">
                    <ul>
                        <li>Minimal 6 characters long</li>
                        <li>Minimal 1 digit required</li>
                        <li>Minimal 1 lowercase character required</li>
                        <li>Minimal 1 uppercase character required</li>
                        <li>Minimal 1 non-alphanumeric character required</li>
                    </ul>
                </div>
            </div>

            <div>
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
</div>
